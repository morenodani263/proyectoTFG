<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UltimateMatch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UltimateMatch"
    xmlns:views="clr-namespace:UltimateMatch.Views"
    Title="UltimateMatch"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <Tab Title="LOGIN">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
        </Tab>

        <Tab Title="PRINCIPAL">
            <ShellContent ContentTemplate="{DataTemplate local:PartidosPage}" Route="PartidosPage" />
        </Tab>

        <Tab Title="REGISTRO">
            <ShellContent ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
        </Tab>

        <Tab Title="JUGADORES">
            <ShellContent ContentTemplate="{DataTemplate views:JugadoresPage}" Route="JugadoresPage" />
        </Tab>

        <Tab Title="CRUD">
            <ShellContent ContentTemplate="{DataTemplate views:CrudPage}" Route="JugadoresPage" />
        </Tab>
    </TabBar>


</Shell>
